{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "2016 Summer Olympic Athletes Body Mass Index (BMI)",
  "data": {
    "url": "https://raw.githubusercontent.com/chozhen98/FIT3179/main/athletes_v6.csv"
  },
  "params": [
    {
      "name": "bmi_selection",
      "bind": {
        "input": "select",
        "options": [null, "Obese", "Overweight", "Normal", "Underweight"],
        "labels": ["Show All", "Obese (BMI > 30)", "Overweight (25 < BMI < 29.9) ", "Normal (18.5 < BMI < 24.9)", "Underweight (BMI < 18.5)"],
     
        "name": "BMI Category: "
      }
    },
        {
      "name": "bmi_above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 45,
        "step": 0.1,
        "name": "Min BMI: "
      }
    },
    {
      "name": "bmi_below",
      "value": 45,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 45,
        "step": 0.1,
        "name": "Max BMI: "
      }
    },
    {
      "name": "kg_above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 180,
        "step": 1,
        "name": "Min Weight: "
      }
    },
    {
      "name": "kg_below",
      "value": 180,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 180,
        "step": 1,
        "name": "Max Weight: "
      }
    },
        {
      "name": "cm_above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 2.4,
        "step": 0.01,
        "name": "Min Height: "
      }
    },
    {
      "name": "cm_below",
      "value": 2.4,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 2.4,
        "step": 0.01,
        "name": "Max Height: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Weight > 0"},
    {"filter": "datum.Height > 0"},
    {"filter": "datum.Weight > kg_above"},
    {"filter": "datum.Weight < kg_below"},
    {"filter": "datum.Height > cm_above"},
    {"filter": "datum.Height < cm_below"},
    {"calculate": "datum.Weight/(datum.Height*datum.Height)", "as": "BMI"},
    {"filter": "datum.Weight/(datum.Height*datum.Height) > bmi_above"},
    {"filter": "datum.Weight/(datum.Height*datum.Height) < bmi_below"},
    {"filter": "datum.Continent"},
    {"filter": "bmi_selection == null || datum.BMI_Range == bmi_selection"}
  ],
  "selection": {
    "sex_highlight": {"type": "multi", "fields": ["Sex"], "bind": "legend"}
  },
  "mark": "circle",
  "encoding": {
    "x": {"field": "Weight", "type": "quantitative", "title": "Kilogram (KG)"},
    "y": {"field": "Height", "type": "quantitative", "title": "Height (CM)"},
    "color": {"field": "Sex", "type": "nominal", 
    "scale":{"type": "ordinal", 
    "domain": ["male", "female"], 
    "range":["#4c78a8", "#f58518"]}},
    "opacity": {
      "condition": {"selection": "sex_highlight", "value": 0.6},
      "value": 0
    },
    "tooltip": [
      {"field": "Name", "type": "nominal"},
      {"field": "Continent", "type": "nominal"},
      {"field": "Country", "type": "nominal"},
      {"field": "Age", "type": "quantitative"},
      {"field": "Sex", "type": "nominal"},
      {"field": "BMI_Range", "type": "nominal"},
      {"field": "Height", "type": "quantitative", "title": "Height(cm)"},
      {"field": "Weight", "type": "quantitative", "title": "Weight(kg)"},
      {"field": "Sport", "type": "nominal"}
    ]
  }
}
