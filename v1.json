{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Number of athletes by Country",
  "width": 300,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/chozhen98/FIT3179/main/ne_50m_admin_0_countries.json",
    "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.SUBUNIT",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/chozhen98/FIT3179/main/country_v2.csv"
        },
        "key": "NOC",
        "fields": [
          "Athlete"
        ]
      }
    }
  ],
  "projection": {"type": "equalEarth"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Athlete",
      "type": "quantitative"
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "Athlete", "type": "nominal", "title": "Participant"}

    ]
  }
}
