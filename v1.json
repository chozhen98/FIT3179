{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Number of athletes by Country",
  "width": 500,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/chozhen98/FIT3179/main/ne_50m_admin_0_countries.json",
    "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.SUBUNIT",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/chozhen98/FIT3179/main/country_v3.csv"
        },
        "key": "NOC",
        "fields": ["Athlete","Population"]
      }
    },
    {"calculate": "datum.Athlete/datum.Population * 1000000", "as": "Normalise"},
    {"calculate": "datum.Population / 1000000", "as": "Pop"}
  ],
  "projection": {"type": "equalEarth"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {"field": "Normalise", "type": "quantitative", "title":"Athlete per 1 million population", 
    "scale":{"type": "threshold", "domain": [1,5,10,20], "range":["#ffffcc","#a1dab4", "#41b6c4","#2c7fb8","#253494"]}},
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Athlete", "type": "nominal", "title": "Participant"},
      {"field": "Pop", "type": "nominal", "title": "Population (Million)","format":".2f"},
      {"field": "Normalise", "type": "nominal", "title": "Participant per 1,000,000 population", "format":".2f"}
    ]
  }
}
